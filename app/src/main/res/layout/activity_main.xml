<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="check"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.anyconfusionhere.mentalmath.MainActivity"
    android:background="#EDFDFF">

    <ImageView
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="start"
        android:src="@drawable/start"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/startButton"
        android:visibility="invisible"
        android:id="@+id/gameRelativeLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/sevenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/startButton"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="7"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/eightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="8"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/nineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="9"
            android:text="9"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/backSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#EDFDFF"
            android:src="@drawable/backspace"
            android:layout_rowSpan="1"
            android:onClick="pull" />

        <Button
            android:background="#EDFDFF"
            android:id="@+id/fourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="4"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/fiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="5"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/sixButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="6"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/oneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="1"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/twoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="2"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/threeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:onClick="push"
            android:tag="3"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:background="#EDFDFF"
            
            android:id="@+id/zeroButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:tag="0"
            android:text="0"
            android:textSize="30sp"
            android:onClick="push" />

        <Button
            android:background="#EDFDFF"
            android:id="@+id/negButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:tag="-"
            android:text="-"
            android:textSize="30sp"
            android:onClick="push" />

        <ImageButton
            android:background="#EDFDFF"
            android:id="@+id/lockIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_columnWeight="200"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:src="@drawable/check"
            android:layout_rowSpan="3"
            android:onClick="check" />


    </GridLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1a3bc2"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60s"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ed0707"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45dp"
        android:visibility="invisible"
        android:layout_above="@+id/startButton"
        android:layout_toRightOf="@+id/currentProblem"
        android:layout_toEndOf="@+id/currentProblem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOUR FINAL SCORE IS "
        android:id="@+id/finalScore"
        android:textSize="25dp"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/currentProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12+3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:textSize="40dp"
        android:layout_above="@+id/startButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="start"
        android:src="@drawable/again"
        android:visibility="invisible"
        android:layout_below="@+id/equals"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/currentAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/currentProblem"
        android:layout_alignBottom="@+id/currentProblem"
        android:layout_toLeftOf="@+id/scoreTextView"
        android:layout_toStartOf="@+id/scoreTextView"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

</RelativeLayout>
